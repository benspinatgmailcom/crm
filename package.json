{
  "name": "crm",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=@crm/api",
    "dev:web": "turbo run dev --filter=@crm/web",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "turbo run db:generate --filter=@crm/db",
    "db:push": "turbo run db:push --filter=@crm/db",
    "db:migrate": "turbo run db:migrate --filter=@crm/db",
    "db:studio": "turbo run db:studio --filter=@crm/db",
    "db:seed": "turbo run db:seed --filter=@crm/db"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.3.0"
  },
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=20"
  }
}
